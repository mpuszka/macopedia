{% if 1 < pages %}
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {% if  page != 1 %}
                <li class="page-item">
                    <a class="page-link" href="{{ url('app_home', {'page': page - 1}) }}">Previous</a>
                </li>
            {% endif %}

            {% for i in 1..pages %}
                <li class="page-item">
                    <a class="page-link" href="{{ url('app_home', {'page': i}) }}">{{ i }}</a>
                </li>
            {% endfor %}
            {% if page != pages %}
                <li class="page-item">
                    <a class="page-link" href="{{ url('app_home', {'page': page + 1}) }}">Next</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}